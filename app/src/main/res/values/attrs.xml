<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string" />
    <attr name="ownerVisible" format="boolean" />
    <attr name="avatarUrl" format="string" />
    <attr name="textColor" format="color" />

    <declare-styleable name="RepoCardView">
        <attr name="title" />
        <attr name="owner" format="string" />
        <attr name="shortDescription" format="string" />
        <attr name="primaryLanguage" format="string" />
        <attr name="totalStars" format="integer" />
        <attr name="ownerVisible" />
        <attr name="avatarUrl" />
        <attr name="textColor" />
    </declare-styleable>
    <declare-styleable name="UserCardView">
        <attr name="title" />
        <attr name="loginId" format="string" />
        <attr name="bio" format="string" />
        <attr name="avatarUrl" />
        <attr name="textColor" />
    </declare-styleable>
    <declare-styleable name="CardHeaderView">
        <attr name="title" />
        <attr name="subtitle" format="string" />
        <attr name="avatarUrl" />
        <attr name="subtitleVisible" format="boolean" />
        <attr name="avatarVisible" format="boolean" />
        <attr name="textColor" />
    </declare-styleable>
</resources>