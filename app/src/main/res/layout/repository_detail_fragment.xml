<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.gianlucaparadise.githubbrowser.ui.repositorydetail.RepositoryDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".ui.repositorydetail.RepositoryDetailFragment">

        <TextView
            android:id="@+id/repository_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewmodel.repository.name}"
            android:textAppearance="?attr/textAppearanceHeadline4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Header Title" />

        <ImageView
            android:id="@+id/owner_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:imageFromUrl="@{viewmodel.repository.owner.avatarUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/repository_author_intro"
            tools:background="@drawable/ic_launcher_foreground"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/repository_author_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{@string/owner_name_extended}"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:visibility="@{viewmodel.ownerNameAndLoginid != null ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/owner_avatar"
            app:layout_constraintTop_toBottomOf="@+id/repository_name"
            app:layout_goneMarginTop="24dp"
            tools:text="@string/owner_name_extended" />

        <TextView
            android:id="@+id/repository_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewmodel.ownerNameAndLoginid}"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:visibility="@{viewmodel.ownerNameAndLoginid != null ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/repository_author_intro"
            app:layout_constraintTop_toBottomOf="@+id/repository_author_intro"
            app:layout_goneMarginTop="24dp"
            tools:text="Jake the Dog" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/owner_bottom_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="owner_avatar,repository_author" />

        <com.google.android.material.chip.Chip
            android:id="@+id/repo_primary_language_name"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"
            android:text="@{viewmodel.repository.primaryLanguageName}"
            android:visibility="@{viewmodel.repository.primaryLanguageName != null ? View.VISIBLE : View.GONE}"
            app:closeIconEnabled="false"
            app:layout_constraintBottom_toBottomOf="@+id/repo_total_stars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/repo_total_stars"
            tools:text="primary-language"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/repo_total_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawableStart="@drawable/ic_star_black_24dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@{String.valueOf(viewmodel.repository.stargazersCount)}"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/owner_bottom_barrier"
            tools:text="100" />

        <TextView
            android:id="@+id/repo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{viewmodel.repository.shortDescriptionHTML}"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repo_total_stars"
            tools:text="Short description for this repo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>