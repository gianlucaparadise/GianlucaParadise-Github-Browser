<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="com.gianlucaparadise.githubbrowser.views.UserCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Title, LoginId and Biography -->
        <com.gianlucaparadise.githubbrowser.views.CardHeaderView
            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:title="User Name"
            tools:subtitle="loginid" />

        <TextView
            android:id="@+id/user_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="User Biography" />

    </LinearLayout>

</merge>